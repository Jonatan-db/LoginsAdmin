{
    "compilerOptions": {
        "target": "es2016",
        "checkJs": true,
        "baseUrl": "./src",     //https://medium.com/@fpastorelima/using-absolute-imports-with-vscode-and-create-react-app-dec6ba0da7ed
        "paths": {
            "_base/*": ["./src/_base/*"],
            "components/*": ["./src/components/*"],
        }
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*",
        "build",
        "dist",
    ],
    "include": [
        "src/**/*",
    ]
}

