{
    "compilerOptions": {
        "target": "es2016",
        "checkJs": true,
        "baseUrl": "./src",
        "paths": {
          "_base/*": ["./src/_base/*"],
          "components/*": ["./src/components/*"],
        }
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*",
        "build",
        "dist",
    ],
    "include": [
        "src/**/*",
    ]
}

